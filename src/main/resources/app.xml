<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <bean id="persona" class="com.tecsup.springagosto.model.Persona">
        <property name="nombres" value="Pablo SA"></property> 
    </bean>
    
    <!-- Valores Constructor -->
    <bean id="bob" class="com.tecsup.springagosto.model.Musico">
        <constructor-arg value="5"/>
    </bean>
    
    <!-- Referenencia en contructor -->
    <bean id="instrumento" class="com.tecsup.springagosto.model.Instrumento">
        <property name="marca" value="fender"/>
    </bean>
    
    <bean id="slash" class="com.tecsup.springagosto.model.Musico">
        <constructor-arg value="5"/>
        <constructor-arg ref="instrumento"/>
    </bean>
    
    
    <!-- Valores a travez de Setter -->
    <bean id="lennon" class="com.tecsup.springagosto.model.Musico">
        <property name="nombres" value="Jhon Lenon"/>
        <property name="numeroCanciones" value="4" />
    </bean>
    
    
</beans>
